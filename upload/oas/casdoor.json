{
  "openapi": "3.0.0",
  "info": {
    "title": "Casdoor API",
    "description": "Documentation of Casdoor API",
    "version": "1.0.0",
    "contact": {
      "email": "admin@casbin.org"
    }
  },
  "paths": {
    "/api/add-user": {
      "post": {
        "tags": [
          "User Operations"
        ],
        "operationId": "addUser",
        "summary": "Add a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "User name"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password"
                  },
                  "phone": {
                    "type": "string",
                    "description": "Phone number"
                  },
                  "countryCode": {
                    "type": "string",
                    "description": "Country code, default CN"
                  },
                  "avatar": {
                    "type": "string"
                  },
                  "socialUserId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/isUserExist": {
      "post": {
        "operationId": "isUserExist",
        "tags": [
          "User Operations"
        ],
        "summary": "Check User is exist",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string"
                  }
                },
                "required": [
                  "phone"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/update-user": {
      "post": {
        "operationId": "updateUser",
        "tags": [
          "User Operations"
        ],
        "summary": "Update an existing user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "avatar": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "countryCode": {
                    "type": "string"
                  },
                  "code": {
                    "type": "string"
                  },
                  "platform": {
                    "type": "string"
                  },
                  "exclusive": {
                    "type": "boolean"
                  },
                  "userId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "operationId": "login",
        "tags": [
          "Authentication"
        ],
        "summary": "Login user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "loginType": {
                    "type": "string",
                    "enum": [
                      "password",
                      "sms",
                      "mini",
                      "app",
                      "h5",
                      "pc",
                      "qy_pc",
                      "dy_mini",
                      "dy_app",
                      "dy_h5",
                      "dy_pc"
                    ]
                  },
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "code": {
                    "type": "string"
                  },
                  "platform": {
                    "type": "string"
                  },
                  "exclusive": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "loginType"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/login/setting": {
      "get": {
        "operationId": "loginSetting",
        "tags": [
          "Authentication"
        ],
        "summary": "Login user configuration",
        "parameters": [
          {
            "name": "loginType",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "mini",
                "app",
                "h5",
                "pc",
                "qy_pc",
                "dy_mini",
                "dy_app",
                "dy_h5",
                "dy_pc"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginSettingResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/refresh-token": {
      "post": {
        "operationId": "refreshToken",
        "tags": [
          "Authentication"
        ],
        "summary": "Refresh auth token",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "refresh_token": {
                    "type": "string"
                  },
                  "platform": {
                    "type": "string"
                  },
                  "exclusive": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "refresh_token"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/send-verification-code": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "operationId": "sendCode",
        "summary": "Send verification code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dest": {
                    "type": "string",
                    "description": "Destination phone number"
                  },
                  "countryCode": {
                    "type": "string",
                    "description": "Country code, default CN"
                  },
                  "provider": {
                    "type": "string",
                    "enum": [
                      "fireboom/login",
                      "fireboom/reset_password",
                      "fireboom/change_phone"
                    ],
                    "description": "SMS Provider"
                  }
                },
                "required": [
                  "dest"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/send-message": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "operationId": "sendMessage",
        "summary": "Send Normal Message",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phones": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Destination phone number"
                  },
                  "countryCode": {
                    "type": "string",
                    "description": "Country code, default CN"
                  },
                  "provider": {
                    "type": "string",
                    "enum": [
                      "fireboom/punish_once",
                      "fireboom/punish_more",
                      "fireboom/manager_warn"
                    ],
                    "description": "SMS Provider"
                  },
                  "params": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "dest",
                  "provider"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/update-provider": {
      "post": {
        "tags": [
          "Provider Operations"
        ],
        "operationId": "updateProvider",
        "summary": "Update provider",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "clientId": {
                    "type": "string"
                  },
                  "clientSecret": {
                    "type": "string"
                  },
                  "signName": {
                    "type": "string"
                  },
                  "templateCode": {
                    "type": "string"
                  }
                },
                "required": [
                  "clientId",
                  "clientSecret",
                  "signName",
                  "templateCode"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/userinfo": {
      "get": {
        "operationId": "userInfo",
        "tags": [
          "User Operations"
        ],
        "summary": "Get user info",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserInfo"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "APIResponse": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "code": {
            "type": "integer"
          },
          "success": {
            "type": "boolean"
          },
          "data": {}
        }
      },
      "LoginSettingResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/LoginConfiguration"
          },
          "msg": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          },
          "code": {
            "type": "integer"
          }
        }
      },
      "LoginConfiguration": {
        "type": "object",
        "properties": {
          "appid": {
            "type": "string"
          },
          "agentid": {
            "type": "string"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/TokenResponse"
          },
          "msg": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          },
          "code": {
            "type": "integer"
          }
        }
      },
      "TokenResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "expireIn": {
            "type": "integer"
          },
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "UserInfo": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          },
          "socialUserId": {
            "type": "string"
          }
        },
        "required": [
          "userId",
          "name"
        ]
      }
    }
  }
}
